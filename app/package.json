{
    "name": "app-monorepo",
    "version": "1.0.0",
    "description": "Full-stack JavaScript monorepo with Express API and React client",
    "private": true,
    "workspaces": [
        "api",
        "client"
    ],
    "scripts": {
        "install:all": "npm install --workspaces",
        "dev:api": "npm run dev --workspace api",
        "dev:client": "npm run dev --workspace client",
        "dev": "concurrently -n \"API,CLIENT\" -c \"blue,green\" \"npm run dev:api\" \"npm run dev:client\"",
        "start:api": "npm run start --workspace api",
        "lint": "npm run lint --workspace api && npm run lint --workspace client"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    },
    "keywords": [
        "monorepo",
        "express",
        "react",
        "mongodb"
    ],
    "author": "",
    "license": "MIT"
}